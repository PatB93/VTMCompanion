<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/first_discipline_tag"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="@string/first_discipline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/first_discipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_discipline_tag"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/second_discipline_tag"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="@string/second_discipline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_discipline"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/second_discipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_discipline_tag"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:background="@color/tile_background"
        android:gravity="center"
        android:text="@string/continue_button"
        android:textColor="@color/title_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>